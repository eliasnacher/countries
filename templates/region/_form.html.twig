{{ form_start(form) }}
    <div class="row justify-content-start">
        <div class="form-group col col-md-4 col-12">
            <label for="name">Name</label>
            {{ form_widget(form.name, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Europe...'} }) }}
            <span class="text-danger">{{ form_errors(form.name) }}</span>
        </div>
    </div>
    <hr>
    <button class="btn btn-success m-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
