{{ form_start(form) }}
    <div class="row justify-content-start">
        <div class="form-group col col-md-4 col-12">
            <label for="commonName">Common Name</label>
            {{ form_widget(form.commonName, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Spain...'} }) }}
            <span class="text-danger">{{ form_errors(form.commonName) }}</span>
        </div>
        <div class="form-group col col-md-4 col-12">
            <label for="officialName">Official Name</label>
            {{ form_widget(form.officialName, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Kingdom of Spain...'} }) }}
            <span class="text-danger">{{ form_errors(form.officialName) }}</span>
        </div>
        <div class="form-group col col-md-4 col-12">
            <label for="flag">Flag</label>
            {{ form_widget(form.flag, { 'attr' : {'class' : 'form-control', 'placeholder' : 'Emogi...'} }) }}
            <span class="text-danger">{{ form_errors(form.flag) }}</span>
        </div>
    </div>
    <div class="row justify-content-start">
        <div class="form-group col col-md-4 col-12">
            <label for="population">Population</label>
            {{ form_widget(form.population, { 'attr' : {'class' : 'form-control', 'placeholder' : '0123456...'} }) }}
            <span class="text-danger">{{ form_errors(form.population) }}</span>
        </div>
        <div class="form-group col col-md-4 col-12">
            <label for="region">Region</label>
            {{ form_widget(form.region, { 'attr' : {'class' : 'form-control'} }) }}
            <span class="text-danger">{{ form_errors(form.region) }}</span>
        </div>
    </div>
    <hr>
    <button class="btn btn-success align-bottom m-2">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
