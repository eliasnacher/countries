{% extends 'base.html.twig' %}

{% block title %}Country{% endblock %}

{% block body %}
    <h1>Country</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ country.id }}</td>
            </tr>
            <tr>
                <th>CommonName</th>
                <td>{{ country.commonName }}</td>
            </tr>
            <tr>
                <th>OfficialName</th>
                <td>{{ country.officialName }}</td>
            </tr>
            <tr>
                <th>Flag</th>
                <td>{{ country.flag }}</td>
            </tr>
            <tr>
                <th>Population</th>
                <td>{{ country.population }}</td>
            </tr>
            <tr>
                <th>Region</th>
                <td>{{ country.region.name }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_country_edit', {'id': country.id}) }}">
        <button class="btn btn-primary align-bottom m-2">Edit</button>
    </a>

    {{ include('country/_delete_form.html.twig') }}
{% endblock %}
